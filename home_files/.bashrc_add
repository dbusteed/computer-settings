# not the best way? in progress
check_git() {
  if [[ $(git status &> /dev/null; echo $?) -eq 0 ]]; then
                echo " (git:$(git branch | grep "*" | awk '{print $2}'))"
  fi
}

get_time() {
        echo "$(date "+%R.%S")"
}

