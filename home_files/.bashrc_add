check_git() {
  if [[ $(git rev-parse --git-dir 2> /dev/null) ]]; then
    echo " (:$(git branch | grep "*" | awk '{print $2}'))"
  fi
}

get_time() {
  echo "$(date "+%R.%S")"
}

# 91 red
# 92 green
# 93 yellow
# 94 blue
# 95 purple

export PROMPT_COMMAND='echo'

export PS1="\[\033[01;95m\][\[\033[93m\]\$(check_git) \[\033[01;92m\]\$(get_time) \[\033[95m\]/ \[\033[94m\]\W \[\033[95m\]]\[\033[00m\] "

